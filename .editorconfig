# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,js}]
indent_size = 2

[*.min.*]
charset = unset
indent_style = unset
indent_size = unset
end_of_line = unset
insert_final_newline = unset
